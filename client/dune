(executable
  (name client)
  (public_name opam-health-check)
  (flags :standard -open Containers)
  (libraries
    mirage-crypto-pk
    cohttp
    cohttp-lwt
    cohttp-lwt-unix
    containers
    xdg-basedir
    fpath
    uri
